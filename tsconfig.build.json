{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ES2019.Array", "ES2019.Object"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "rootDir": "./dist/ts",
    "outDir": "./dist/js",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./dist/ts/"
    // "./index.ts",
    // "./primitives",
    // "./theme",
    // "./src"
  ],
  "exclude": ["./src/@types"]
}
