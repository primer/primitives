{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2016",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./src/@types", "./node_modules/@types", "types", "config/types/"],
    "rootDir": "./",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src/", "scripts/", "docs/", "config/"],
  "exclude": ["./src/@types"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
