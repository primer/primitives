{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./src/@types", "./node_modules/", "./node_modules/@types", "types", "config/types/"],
    "types": ["vitest/globals"],
    "rootDir": "./",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src/", "scripts/", "docs/", "config/", "playwright.config.ts", "e2e", "vitest.config.ts"],
  "exclude": ["./src/@types"]
}
