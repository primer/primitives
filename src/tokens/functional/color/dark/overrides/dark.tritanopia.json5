/**
 * Dark tritanopia theme
 * @extends all functional tokens
 * @description All overwrites for functional color tokens for this theme are in this file
 */
{
  fgColor: {
    success: {
      $value: '{base.color.blue.3}',
      $type: 'color',
    },
    severe: {
      $value: '{base.color.red.4}',
      $type: 'color',
    },
    open: {
      $value: '{base.color.red.4}',
      $type: 'color',
    },
    closed: {
      $value: '{fgColor.muted}',
      $type: 'color',
    },
  },
  bgColor: {
    success: {
      muted: {
        $value: '{base.color.blue.4}',
        $type: 'color',
        alpha: 0.15,
      },
      emphasis: {
        $value: '{base.color.blue.5}',
        $type: 'color',
      },
    },
    severe: {
      muted: {
        $value: '{base.color.red.4}',
        $type: 'color',
        alpha: 0.1,
      },
      emphasis: {
        $value: '{base.color.red.5}',
        $type: 'color',
      },
    },
    open: {
      muted: {
        $value: '{base.color.red.4}',
        $type: 'color',
        alpha: 0.1,
      },
      emphasis: {
        $value: '{base.color.red.5}',
        $type: 'color',
      },
    },
    closed: {
      muted: {
        $value: '{bgColor.neutral.muted}',
        $type: 'color',
        alpha: 0.1,
      },
      emphasis: {
        $value: '{bgColor.neutral.emphasis}',
        $type: 'color',
      },
    },
    sponsors: {
      muted: {
        $value: '#db61a2',
        $type: 'color',
        alpha: 0.1,
      },
    },
  },
  codeMirror: {
    syntax: {
      fgColor: {
        variable: {
          $value: '{base.color.red.2}',
          $type: 'color',
        },
      },
    },
  },
  button: {
    primary: {
      bgColor: {
        hover: {
          $value: '#2a7aef',
          $type: 'color',
        },
        active: {
          $value: '#3685f3',
          $type: 'color',
        },
        disabled: {
          $value: '#5fabfe',
          $type: 'color',
        },
      },
      borderColor: {
        disabled: {
          $value: '#5fabfe',
          $type: 'color',
        },
      },
    },
    outline: {
      bgColor: {
        hover: {
          $value: '#262c36',
          $type: 'color',
        },
        active: {
          $value: '#0d419d',
          $type: 'color',
        },
        disabled: {
          $value: '#212830',
          $type: 'color',
        },
      },
    },
  },
  color: {
    ansi: {
      green: {
        $value: '{base.color.blue.3}',
        $type: 'color',
      },
      'green-bright': {
        $value: '{base.color.blue.2}',
        $type: 'color',
      },
    },
    prettylights: {
      syntax: {
        'string-regexp': {
          $value: '{base.color.blue.1}',
          $type: 'color',
        },
        'entity-tag': {
          $value: '{base.color.blue.1}',
          $type: 'color',
        },
        variable: {
          $value: '{base.color.red.2}',
          $type: 'color',
        },
        markup: {
          inserted: {
            text: {
              $value: '{base.color.blue.0}',
              $type: 'color',
            },
            bg: {
              $value: '{base.color.blue.8}',
              $type: 'color',
            },
          },
          changed: {
            text: {
              $value: '{base.color.red.0}',
              $type: 'color',
            },
            bg: {
              $value: '{base.color.red.8}',
              $type: 'color',
            },
          },
        },
      },
    },
  },
}
