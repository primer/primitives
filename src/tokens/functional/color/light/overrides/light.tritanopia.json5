/**
 * Light tritanopia theme
 * @extends all functional tokens
 * @description All overwrites for functional color tokens for this theme are in this file
 */
{
  button: {
    primary: {
      bgColor: {
        hover: {
          $value: '#0864d1',
          $type: 'color',
        },
        active: {
          $value: '#075fc8',
          $type: 'color',
        },
        disabled: {
          $value: '#92caff',
          $type: 'color',
        },
      },
      shadow: {
        selected: {
          $value: [
            {
              color: '{base.color.blue.9}',
              alpha: 0.3,
              offsetX: '0px',
              offsetY: '1px',
              blur: '0px',
              spread: '0px',
              inset: true,
            },
          ],
          $type: 'shadow',
        },
      },
    },
  },
  color: {
    prettylights: {
      syntax: {
        'string-regexp': {
          $value: '{base.color.blue.6}',
          $type: 'color',
        },
        variable: {
          $value: '{base.color.red.6}',
          $type: 'color',
        },
        markup: {
          inserted: {
            text: {
              $value: '{base.color.blue.6}',
              $type: 'color',
            },
            bg: {
              $value: '{base.color.blue.0}',
              $type: 'color',
            },
          },
          changed: {
            text: {
              $value: '{base.color.red.6}',
              $type: 'color',
            },
            bg: {
              $value: '{base.color.red.1}',
              $type: 'color',
            },
          },
        },
      },
    },
  },
}
