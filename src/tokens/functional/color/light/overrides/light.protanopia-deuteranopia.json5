/**
 * Light protanopia and deuteranopia (colorblind)
 * @extends all functional tokens
 * @description All overwrites for functional color tokens for light protanopia and deuteranopia color mode are in this file
 */
{
  button: {
    primary: {
      bgColor: {
        hover: {
          $value: '#0864d1',
          $type: 'color',
        },
        active: {
          $value: '#075fc8',
          $type: 'color',
        },
        disabled: {
          $value: '#92caff',
          $type: 'color',
        },
      },
      shadow: {
        selected: {
          $value: [
            {
              color: '{base.color.blue.9}',
              alpha: 0.3,
              offsetX: '0px',
              offsetY: '1px',
              blur: '0px',
              spread: '0px',
              inset: true,
            },
          ],
          $type: 'shadow',
        },
      },
    },
    danger: {
      bgColor: {
        hover: {
          $value: '{base.color.orange.6}',
          $type: 'color',
        },
        active: {
          $value: '#7e2f00',
          $type: 'color',
        },
      },
      shadow: {
        selected: {
          $value: [
            {
              color: '{base.color.orange.9}',
              alpha: 0.2,
              offsetX: '0px',
              offsetY: '1px',
              blur: '0px',
              spread: '0px',
              inset: true,
            },
          ],
          $type: 'shadow',
        },
      },
    },
  },
}
