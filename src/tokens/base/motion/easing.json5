{
  base: {
    easing: {
      linear: {
        $value: [0, 0, 1, 1],
        $type: 'cubicBezier',
        $description: 'Constant motion with no acceleration. Use for continuous animations like progress bars or loaders.',
        $extensions: {
          'org.primer.llm': {
            usage: ['progress-bar', 'loader', 'continuous-animation', 'scrolling'],
            rules:
              'Use for constant-speed animations like progress bars, loaders, and scrolling. Do NOT use for interactive state changes—prefer ease or easeOut instead.',
          },
        },
      },
      ease: {
        $value: [0.25, 0.1, 0.25, 1],
        $type: 'cubicBezier',
        $description: 'CSS default easing. Use for hover state changes and micro-interactions.',
        $extensions: {
          'org.primer.llm': {
            usage: ['hover-state', 'micro-interaction', 'button-hover', 'link-hover'],
            rules:
              'RECOMMENDED for hover states and micro-interactions (color changes, opacity shifts). SHOULD pair with 100–200ms duration.',
          },
        },
      },
      easeIn: {
        $value: [0.7, 0.1, 0.75, 0.9],
        $type: 'cubicBezier',
        $description: 'Accelerating motion. Use for elements exiting the viewport (moving off-screen).',
        $extensions: {
          'org.primer.llm': {
            usage: ['exit-animation', 'element-leaving', 'off-screen-motion'],
            rules:
              'Accelerating motion for elements leaving the screen. Rarely used alone. SHOULD prefer easeOut for most exit animations unless element accelerates off-screen.',
          },
        },
      },
      easeOut: {
        $value: [0.3, 0.8, 0.6, 1],
        $type: 'cubicBezier',
        $description: 'Decelerating motion. Use for elements entering the viewport or appearing on screen.',
        $extensions: {
          'org.primer.llm': {
            usage: ['enter-animation', 'element-appearing', 'modal-open', 'dropdown-open', 'tooltip-appear'],
            rules:
              'RECOMMENDED default for enter/exit animations. Use when elements appear on screen (modals, dropdowns, tooltips). SHOULD pair with 200–300ms duration.',
          },
        },
      },
      easeInOut: {
        $value: [0.6, 0, 0.2, 1],
        $type: 'cubicBezier',
        $description: 'Smooth acceleration and deceleration. Use for elements moving or morphing within the viewport.',
        $extensions: {
          'org.primer.llm': {
            usage: ['position-change', 'size-change', 'morph-animation', 'expand-collapse', 'slide-transition'],
            rules:
              'Use for elements moving position or changing size within the viewport. SHOULD pair with 200–400ms duration for expand/collapse and slide transitions.',
          },
        },
      },
    },
  },
}
